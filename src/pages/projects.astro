---
import BaseLayout from "../layouts/BaseLayout.astro";
import Project from "../components/Project.astro";
---
<BaseLayout title="Projects">
	<div class = "mt-16">
		<h1 class = "text-(--mocha_green) text-4xl font-light">Projects</h1>
		<div class = "flex flex-col gap-6 mt-8">
			<Project title="CLI Password Manager" description = "A command line password manager entirely built using Rust!" linkToRepo={"https://github.com/Rageon787/rust-pass"} />
			<Project title="Cloud Storage App" description = "A Full stack Application featuring a Golang backend, React Web-client and a Flutter Mobile app!" linkToRepo={"https://github.com/Rageon787/cloud-storage-app"} />
			<Project title="This Website" description = "Built this website using astro and hosting it with GitHub Pages" linkToRepo={"https://github.com/Rageon787/rageon787.github.io"} />

		</div>
    </div>
</BaseLayout>
