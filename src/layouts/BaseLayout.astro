---
import "./src/styles/global.css";
const { title } = Astro.props;
const {titleColor} = Astro.props;
---
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{title}</title>
    </head>

    <body class="flex justify-center">
        <div class="w-3xl">
            <div class = "m-8">
                <h1 class = "text-(--mocha_mauve) heading"><a href="/">Ragav Srinivasan</a></h1>
                <nav class="text-2xl">
                    <a href="/about/" class="text-(--mocha_red)">/about</a>
                    <a href="/projects/" class = "text-(--mocha_green)">/projects</a>
                    <a href="/blog/" class = "text-(--mocha_blue)">/blog</a>
                </nav>


                <article>
                    <slot /> <!-- your content is injected here -->
                </article>
            </div>
        </div>
    </body>


</html>